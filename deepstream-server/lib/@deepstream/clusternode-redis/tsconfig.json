{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "allowJs": false,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "strict": true,
      "types": [
        "node",
        "mocha"
      ]
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules"
    ],
  }
